import java.awt.BorderLayout;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.event.MouseListener;
import java.awt.geom.Ellipse2D;

import javax.swing.JFrame;
import javax.swing.JPanel;
/**
 * 
2. Write a program that allows the user to specify a circle with two mouse presses, the first one on the center and second on a point on the periphery.
 * @author ssu_user
 *
 */
public class Week11_Sample02 {
	public static void main(String []args){
		JFrame myFrame = new JFrame();
		myFrame.setSize(800,800);
		myFrame.setTitle("ÇÙ²ÜÀë");
		myFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		myFrame.add(new  Week11_Sample02_Circle());
		myFrame.setVisible(true);
	}
}
class Week11_Sample02_Circle extends JPanel implements MouseListener{
	Ellipse2D.Double Circle;
	double X1,Y1,X2,Y2;
	MouseListener m1;
	Week11_Sample02_Circle(){
		System.out.println("¤¾¤¾");
		this.addMouseListener(m1);
	}
	public void paintComponent(Graphics g){
		super.paintComponent(g);
		Graphics2D g2 = (Graphics2D) g;
		Circle = new Ellipse2D.Double();
		double width,height;
		width = 2*(X2 - X1);
		height = 2*(Y2 - Y1);
		Circle.setFrame(X1, Y1, width, height);
		g2.draw(Circle);
	}
	@Override
	public void mouseClicked(java.awt.event.MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseEntered(java.awt.event.MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseExited(java.awt.event.MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mousePressed(java.awt.event.MouseEvent arg0) {
		// TODO Auto-generated method stub
		System.out.println("¸¶¿ì½º ´­¸²");
		X1 = arg0.getX();
		Y1 = arg0.getY();
	}

	@Override
	public void mouseReleased(java.awt.event.MouseEvent arg0) {
		// TODO Auto-generated method stub
		System.out.println("¸¶¿ì½º ¶¼Áü");
		X2 = arg0.getX();
		Y2 = arg0.getY();
	}
}